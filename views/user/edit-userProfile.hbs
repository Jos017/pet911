
<form action="/user/edit-userProfile" method="post">
<section style="background-color: #eee;">
  {{#with currentUser}}
  <div class="container py-5">
    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img src="{{profilePic}}" alt="avatar"
              class="rounded-circle img-fluid" style="width: 150px;">
            <h5 class="my-3">{{firstName}} {{lastName}}</h5>
            <p class="text-muted mb-1"></p>
            <p class="text-muted mb-4"></p>
            <div class="d-flex justify-content-center mb-2">
              <a href="/user/my-pets"><button type="button" class="btn btn-primary">View Petsüîé</button></a>
              <a href="/pet/pet-reports"><button type="button" class="btn btn-primary ms-1">View Reports‚ùó</button></a>
            </div>
            <div class="d-flex justify-content-center mb-2">
              <a href="/pet/pet-signup"><button type="button" class="btn btn-outline-primary ms-1">Regist your pet üê∂</button></a>
            </div>
            </div>
          </div>
        </div>
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Username</p>
              </div>
              <div class="col-sm-9">
                <input type="text" value="{{username}}" name="username">
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">First Name</p>
              </div>
              <div class="col-sm-9">
                <input type="text" value="{{firstName}}" name="firstName">
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Last Name</p>
              </div>
              <div class="col-sm-9">
                <input type="text" value="{{lastName}}" name="lastName">
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <input type="text" value="{{email}}" name="email">
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Phone</p>
              </div>
              <div class="col-sm-9">
                <input type="text" value="{{phone}}" name="phone">
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Password</p>
              </div>
              <div class="col-sm-9">
                <input type="password" name="password">
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Address</p>
              </div>
              <div class="col-sm-9">
                <input type="text" value="{{address}}" name="address">
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Pets Registered</p>
              </div>
              <div class="col-sm-9">
                {{#each pets}}
                <p class="text-muted mb-0">{{petName}}</p>
                {{/each}}
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Reports made</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{reports.length}}</p>
              </div> 
            </div>
            <hr>
            <div class="row">
                <span><button type="submit" class="btn btn-outline-primary ms-1 w-100">Save</button></span>
              </div>
            </div>      
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/with}}
  {{#if errorMessage}}
     <p class="error-message">{{errorMessage}}</p>
    {{/if}}
</section>
</form>